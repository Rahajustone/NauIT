<div class="col-md-9 col-sm-12 col-12">
    <div class="card card">
        <div class="card-header">
            <h3 class="card-title">Department</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        {{ form_start(form) }}
            <div class="card-body">
                {{ form_widget(form) }}
            </div>
            <!-- /.card-body -->
            <div class="card-footer py-1">
                <button type="submit" class="btn btn-warning text-white"><i class="fa fa-save"></i> Save</button>
            </div>
        {{ form_end(form) }}    
    </div>
</div>
<div class="col-md-3 col-sm-12 col-12">
    <div class="card card">
        <div class="card-header">
            <h3 class="card-title">Department Search</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form">
            <div class="card-body">
                <div class="form-group">
                    <label>Department Name:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-building "></i></span>
                        </div>
                        <input type="text" class="form-control" required>
                    </div>
                    <!-- /.input group -->
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default float-right"><i class="fa fa-search"></i> Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
