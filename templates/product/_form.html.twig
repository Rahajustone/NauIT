<div class="col-md-12 col-sm-12 col-12">
    <div class="card card">
        <div class="card-header">
            <h3 class="card-title">Product</h3>
            <a href="{{ path('product_index') }}" class="btn btn-default btn-sm mr-1 float-right">
                <i class="fa fa-arrow-left"></i>
            </a>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.name) }}
                    <div class="form-group">
                        {{ form_label(form.serialNumber) }}
                        <div class="input-group">
                            {{ form_widget(form.serialNumber, {attr: {'class' : 'form-control'}}) }}
                            <span class="input-group-append">
                                <button type="button" class="btn btn-info btn-flat" id="serialNumber"><i class="fas fa-barcode"></i></button>
                            </span>
                        </div>
                        <small>{{ form_help(form.serialNumber) }}</small>
                        <div class="form-error">
                            {{ form_errors(form.serialNumber) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.macAddress) }}
                        <div class="input-group">
                            {{ form_widget(form.macAddress, {attr: {'class' : 'form-control macnumber'}}) }}
                            <span class="input-group-append">
                                <button type="button" class="btn btn-info btn-flat" id="macAddress"><i class="fas fa-gem "></i></button>
                            </span>
                        </div>
                        <small>{{ form_help(form.macAddress) }}</small>
                        <div class="form-error">
                            {{ form_errors(form.macAddress) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.ipAddress) }}
                        <div class="input-group">
                            {{ form_widget(form.ipAddress, {attr: {'class' : 'form-control ipnumber'}}) }}
                            <span class="input-group-append">
                                <button type="button" class="btn btn-info btn-flat" id="ipAddress"><i class="fas fa-gem "></i></button>
                            </span>
                        </div>
                        <small>{{ form_help(form.ipAddress) }}</small>
                        <div class="form-error">
                            {{ form_errors(form.ipAddress) }}
                        </div>
                    </div>
                    {{ form_row(form.quantity) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.os) }}
                    {{ form_row(form.status) }}
                    {{ form_row(form.modelType) }}
                    {{ form_row(form.productModel) }}
                    {{ form_row(form.price) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.comments) }}
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
            <button type="submit" class="btn color-na-green-background float-right text-white">{{ button_label }}</button>
        </div>
        {{ form_end(form) }}    
    </div>
</div>