{% extends 'parent.html.twig' %}

{% block title %}Product{% endblock %}

{% block content %}
<div class="content-header px-5">
    <div class="container-fluid">
        <div class="row my-3">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Product</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href=" {{ path('dashboard') }} ">Home</a></li>
                    <li class="breadcrumb-item active">Product</li>
                </ol>
            </div><!-- /.col -->
        </div>
    </div>
</div>
<section class="content px-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-0">
                        <div class="row">
                            <div class="col py-1">
                                <div class="btn-group my-1 mr-2">
                                    <a href="{{ path('product_index') }}" class="btn btn-default btn-sm mr-1">
                                        <i class="fa fa-arrow-left"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="col py-1">
                                <div class="d-flex justify-content-end">
                                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm mr-1">
                                        <i class="text-white fa fa-pen"></i>
                                    </a>
                                    {{ include('product/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ product.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ product.name }}</td>
                                </tr>
                                <tr>
                                    <th>Serial Number</th>
                                    <td>{{ product.serialnumber }}</td>
                                </tr>
                                <tr>
                                    <th>IpAddress</th>
                                    <td>{{ product.ipAddress }}</td>
                                </tr>
                                <tr>
                                    <th>MacAdrress</th>
                                    <td>{{ product.macAdrress }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>
                                        {{ product.status }}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Model Type</th>
                                    <td>
                                        {{ product.modeltype }}
                                    </td>
                                </tr>
                                 <tr>
                                    <th>Product Model</th>
                                    <td>
                                        {{ product.productModel }}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Os</th>
                                    <td>{{ product.os }}</td>
                                </tr>
                                <tr>
                                    <th>Price</th>
                                    <td>{{ product.price }}</td>
                                </tr>
                                <tr>
                                    <th> Comments </th>
                                    <td>{{ product.comments }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}