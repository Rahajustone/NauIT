{% extends 'parent.html.twig' %}

{% block title %}ProductType index{% endblock %}

{% block content %}
<div class="content-header px-5">
    <div class="container-fluid">
        <div class="row my-3">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Products Type</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href=" {{ path('dashboard') }} ">Home</a></li>
                    <li class="breadcrumb-item active">Products Type</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content px-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-0">
                        <div class="row">
                            <div class="col-12 col-sm-3 py-1">
                                <div class="btn-group my-1 mr-2">
                                    
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 py-1">
                                <form class="form-inline justify-content-center">
                                    <div class="input-group my-1 mr-1" style="width: 100%;">
                                        <input type="text" name="table_search" class="form-control" placeholder="Search">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-12 col-sm-3 py-1">
                                <div class="d-flex justify-content-end">
                                    <a href="{{ path('producttype_new') }}" class="btn color-na-green-background my-1 pull-right"><i class="fa fa-plus text-white"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>CreatedAt</th>
                                    <th>UpdatedAt</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for product_type in product_types %}
                                <tr>
                                    <td>{{ product_type.id }}</td>
                                    <td>{{ product_type.name }}</td>
                                    <td>{{ product_type.createdAt ? product_type.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ product_type.updatedAt ? product_type.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        {{ include('product_type/_delete_form.html.twig', {'button_label' : '', 'class' : ''}) }}
                                        <a href="{{ path('producttype_show', {'id': product_type.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                                        <a href="{{ path('producttype_edit', {'id': product_type.id}) }}" class="btn btn-warning btn-sm"><i class="text-white fa fa-pen"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
