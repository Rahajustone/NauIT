<form method="post" action="{{ path('productmodel_delete', {'id': product_model.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product_model.id) }}">
    <button class="btn btn-danger btn-sm {{ class }}"><i class="fa fa-trash"></i> {{ button_label }}</button>
</form>
