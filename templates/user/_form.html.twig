<div class="col-md-9 col-sm-12 col-12">
    <div class="card card">
        <div class="card-header">
            <h3 class="card-title">Create User</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        {{ form_start(form) }}
            <div class="card-body">
                {{ form_widget(form) }}
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        {{ form_end(form) }}    
    </div>
</div>
